<div class="internal-content">
  <h1>List of Books avaliable:</h1>

  <br>

  <% @books.each do |book| %>
    <p>Title: <strong><%= book.title %></strong></p>
    <p>Author: <%= book.author.name %></p>
    <% book.rating.times do %>
      <%= image_tag 'https://openclipart.org/download/262404/hp_gold_star.svg', alt: 'star', class: 'star-image' %>
    <% end %>
    <p><%=image_tag (book.image_url), class: 'cover_img', alt: 'best book online, books cheap best book' %></p>
    <%= link_to 'Details', book_path(book) %><br><br>
  <% end %>
</div>
